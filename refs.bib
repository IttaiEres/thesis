@article{Khan.2013, 
author = {Khan, Zia and Ford, Michael J. and Cusanovich, Darren A. and Mitrano, Amy and Pritchard, Jonathan K. and Gilad, Yoav}, 
title = {{Primate Transcript and Protein Expression Levels Evolve Under Compensatory Selection Pressures}}, 
