number = {11}, 
volume = {43}, 
journal = {Nature Genetics}, 
local-url = {file://localhost/Users/ittaieres/Documents/Papers%20Library/Yaffe-Probabilistic%20modeling%20of%20Hi-C%20contact%20maps%20eliminates%20systematic%20biases%20to%20characterize%20global%20chromosomal%20architecture-2011-Nature%20Genetics.pdf}, 
