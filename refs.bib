journal = {Molecular cell}, 
year = {2017}
}
@article{Gómez-Marín.2015, 
author = {Gómez-Marín, Carlos and Tena, Juan J and Acemel, Rafael D and López-Mayorga, Macarena and Naranjo, Silvia and Calle-Mustienes, Elisa de la and Maeso, Ignacio and Beccari, Leonardo and Aneas, Ivy and Vielmas, Erika and Bovolenta, Paola and Nobrega, Marcelo A and Carvajal, Jaime and Gómez-Skarmeta, José}, 
